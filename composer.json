{
  "name": "storage/dashboard",
  "description": "Storage Management Dashboard (PHP + MySQL)",
  "type": "project",
  "require": {
    "php": "^8.2",
    "ext-gd": "*",
    "vlucas/phpdotenv": "^5.6",
    "nikic/fast-route": "^1.3",
    "twig/twig": "^3.22",
    "robmorgan/phinx": "^0.16.10",
    "league/csv": "^9.28",
    "monolog/monolog": "^3.10",
    "mpdf/mpdf": "^8.0"
  },
  "autoload": {
    "psr-4": { "App\\": "src/" }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public",
    "migrate": "vendor/bin/phinx migrate -e development",
